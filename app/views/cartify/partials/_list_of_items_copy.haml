.hidden-xs.divider-lg.pt-20
  %table.table.table-hover
    %thead
      %tr
        %th
          %span.in-grey-600= Cartify.product_class.to_s
        %th.col-method
        %th
          %span.in-grey-600= t('cart.price')
        %th
          %span.in-grey-600= t('cart.quantity')
        %th
          %span.in-grey-600= t('order.total')
    %tbody
      - current_order.order_items.each do |item|
        %tr
          %td
            .general-img-wrap-table
              = image_tag image_for(item.product), alt: 'design-book', class: 'cart-img-shadow pull-left'
          %td
            %p.title= item.product.send(Cartify.title_attribute)
            - if item.product.respond_to?(:description)
              %p.in-grey-600.fw-300= item.product.description.split('. ').first + '.'
          %td
            %span.font-16.in-gold-500= "#{item.product.send(Cartify.price_attribute)} SEK"
          %td
            %span.ml-30= item.quantity
          %td
            %span.font-16.in-gold-500= "#{item.total_price} SEK"
